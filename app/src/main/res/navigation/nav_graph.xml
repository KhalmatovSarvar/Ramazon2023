<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <action
        android:id="@+id/action_global_splashFragment"
        app:destination="@id/splashFragment"
        app:popUpTo="@id/nav_graph" />

    <action
        android:id="@+id/action_global_locationFragment"
        app:destination="@id/locationScreen"
        app:popUpTo="@id/nav_graph" />

    <action
        android:id="@+id/action_global_mainFlowFragment"
        app:destination="@id/mainFlowFragment"
        app:popUpTo="@id/nav_graph" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.shersar.ramazon2023.ui.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" />
    <fragment
        android:id="@+id/locationScreen"
        android:name="com.shersar.ramazon2023.ui.location.LocationScreen"
        tools:layout="@layout/screen_location"
        android:label="LocationScreen" />
    <fragment
        android:id="@+id/mainFlowFragment"
        android:name="com.shersar.ramazon2023.ui.MainFlowFragment"
        android:label="fragment_main_flow"
        tools:layout="@layout/fragment_main_flow" />
</navigation>